{
  "name": "Weekendly - Smart Weekend Planner",
  "short_name": "Weekendly",
  "description": "AI-powered weekend planning app with emotion detection, weather intelligence, and social sharing",
  "version": "1.0.0",
  "theme_color": "#3B82F6",
  "background_color": "#F8FAFC",
  "display": "standalone",
  "orientation": "portrait",
  "scope": "/",
  "start_url": "/",
  "id": "weekendly-app",
  "categories": ["lifestyle", "productivity", "social"],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
